<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QcodeScanner"
    android:orientation="vertical">

    <EditText
        android:id="@+id/q_code_editZ_text_input"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your String "
        android:background="#D5C6C6"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"

        />
    <Button
        android:id="@+id/q_code_button_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@color/Green"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/q_code_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/Gray"
        />

    <Button
        android:id="@+id/q_code_button_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@color/Green"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>